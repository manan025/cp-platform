<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/questions.css" ></link>
    <link rel="stylesheet" href="/global.css" ></link>
    <title>Questions</title>
</head>
<body>
    <table>
        <tr>
            <td colspan="4" id="points"><label>Points:</label><span><%= points %></span></td>
        </tr>
        <tr>
            <th>NAME</th>
            <th>POINTS</th>
            <th>STATUS</th>
        </tr>
        <% questions.forEach(function(ques){ %>
            <tr>
                <td><a href='/ques/<%= ques.id %>'><%= ques.name %></a></td>
                <td><%= ques.points %></td>
                <td><%= ques.status %></td>
            </tr>
        <% }) %>
    </table>
</body>
</html>